export PROJECTS=$HOME/Git

FILES=$( find $DOTFILES -name path.sh )
for file in "$FILES" ; do
	echo "Importing $file..."
	source $file
done

$DOTFILES/vim/install.sh

if [ -z "$PS1" ]; then
        echo "---===[[[ this shell is not interactive ]]]===---"
else
	alias ls='ls --color=auto'
        echo "---===[[[ THIS SHELL IS INTERACTIVE ]]]===---"
fi
